@import "./config/config.styl"
@import "./config/bttn-base.styl"

.bttn-jelly
  {bttnBaseStyle}
  {bttnMdSize}
  border: 1px solid currentColor
  border-radius 50px;
  color: currentColor;
  overflow hidden
  transition all 0.3s anim_func
  &:before
    position: absolute;
    content: '';
    width: 100%;
    height: 100%;
    background: currentColor;
    left: 0;
    top: 0;
    opacity: 0;
    z-index -1
    border-radius 50px;
    transform scale(0.8)
    transition all 0.3s anim_func
  &:hover, &:focus
    outline none
    border-color currentColor
    box-shadow 0 1px 8px cBlack - rgba(0, 0, 0, .4)
    transition all 0.5s anim_func
    transform scale(1.1)
    &:before
      transform scale(1)
      transition all 0.5s anim_func
      opacity: 0.2
  &.bttn-xs
    {bttnXsSize}
    &:hover, &:focus
      box-shadow 0 1px 4px cBlack - rgba(0, 0, 0, .4)
  &.bttn-sm
    {bttnSmSize}
    &:hover, &:focus
      box-shadow 0 1px 6px cBlack - rgba(0, 0, 0, .4)
  &.bttn-md
    {bttnMdSize}
    &:hover, &:focus
      box-shadow 0 1px 8px cBlack - rgba(0, 0, 0, .4)
  &.bttn-lg
    {bttnLgSize}
    &:hover, &:focus
      box-shadow 0 1px 10px cBlack - rgba(0, 0, 0, .4)

.bttn-simple
  {bttnBaseStyle}
  {bttnMdSize}
  border-width: 0
  border-radius 4px;
  background cWhite - rgba(0,0,0,0.6)
  color: cWhite
  overflow hidden
  transition all 0.3s anim_func
  &:hover, &:focus
    opacity 0.75
  &.bttn-xs
    {bttnXsSize}
  &.bttn-sm
    {bttnSmSize}
  &.bttn-md
    {bttnMdSize}
  &.bttn-lg
    {bttnLgSize}
  &.bttn-default
    background cWhite - rgba(0,0,0,0.6)
  &.bttn-primary
    background cBlue
  &.bttn-warning
    background cYellow
  &.bttn-danger
    background cRedLight
  &.bttn-success
    background cGreen
  &.bttn-royal
    background cPurple

.bttn-minimal
  {bttnBaseStyle}
  {bttnMdSize}
  border-width: 0
  border-radius 4px;
  background transparent
  color: cWhite
  overflow hidden
  transition all 0.3s anim_func
  &:after
    content: '';
    position: absolute;
    bottom: 0;
    left: 7px;
    width: calc(100% - 14px);
    height: 1px;
    opacity 0.65
    background: currentColor;
    transition transform 0.3s anim_func, opacity 0.3s anim_func
  &:before
    content: '';
    position: absolute;
    bottom: 0;
    left: 7px;
    width: calc(100% - 14px);
    height: 1px;
    opacity 0.65
    background: currentColor;
    transition transform 0.3s anim_func, opacity 0.3s anim_func
  &:hover, &:focus
    opacity 0.9
    transition all 0.5s anim_func
    &:after
      opacity 1
      transform translateX(-7px) rotate(0.001deg)
      transition transform 0.5s anim_func, opacity 0.5s anim_func
    &:before
      opacity 1
      transform translateX(7px) rotate(0.001deg)
      transition transform 0.5s anim_func, opacity 0.5s anim_func
  &.bttn-xs
    {bttnXsSize}
  &.bttn-sm
    {bttnSmSize}
  &.bttn-md
    {bttnMdSize}
  &.bttn-lg
    {bttnLgSize}
  &.bttn-default
    color cWhite
  &.bttn-primary
    color cBlue
  &.bttn-warning
    color cYellow
  &.bttn-danger
    color cRedLight
  &.bttn-success
    color cGreen
  &.bttn-royal
    color cPurple