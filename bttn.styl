.bttn-minimal
  {bttnBaseStyle}
  {bttnMdSize}
  border-width: 0
  border-radius 4px;
  background transparent
  color: cWhite
  overflow hidden
  transition all 0.5s anim_func
  &:after
    content: '';
    position: absolute;
    bottom: 0;
    left: 10px;
    width: calc(100% - 20px);
    height: 1px;
    opacity 0.65
    background: currentColor;
    transition transform 0.5s anim_func, opacity 0.5s anim_func
  &:before
    content: '';
    position: absolute;
    bottom: 0;
    left: 10px;
    width: calc(100% - 20px);
    height: 1px;
    opacity 0.65
    background: currentColor;
    transition transform 0.5s anim_func, opacity 0.5s anim_func
  &:hover, &:focus
    opacity 0.9
    &:after
      opacity 1
      transform translateX(-10px) rotate(0.001deg)
    &:before
      opacity 1
      transform translateX(10px) rotate(0.001deg)
  &.bttn-xs
    {bttnXsSize}
  &.bttn-sm
    {bttnSmSize}
  &.bttn-md
    {bttnMdSize}
  &.bttn-lg
    {bttnLgSize}
  &.bttn-default
    color cWhite
  &.bttn-primary
    color cBlue
  &.bttn-warning
    color cYellow
  &.bttn-danger
    color cRedLight
  &.bttn-success
    color cGreen
  &.bttn-royal
    color cPurple

.bttn-stretch
  {bttnBaseStyle}
  {bttnMdSize}
  border-width: 0
  border-radius 0;
  background transparent
  color: cWhite
  letter-spacing: 0;
  overflow hidden
  transition all 0.3s anim_func
  &:after, &:before
    content: '';
    position: absolute;
    left: 50%;
    width: 0;
    height: 1px;
    opacity 0.65
    background: currentColor;
    transition all 0.3s anim_func
  &:after
    top: 0;
  &:before
    bottom: 0;
  &:hover, &:focus
    letter-spacing: 2px;
    opacity 0.9
    transition all 0.5s anim_func
    &:after
      opacity 1
      left: 0;
      width: 100%;
      transition all 0.5s anim_func
    &:before
      opacity 1
      left: 0;
      width: 100%;
      transition all 0.5s anim_func
  &.bttn-xs
    {bttnXsSize}
  &.bttn-sm
    {bttnSmSize}
  &.bttn-md
    {bttnMdSize}
  &.bttn-lg
    {bttnLgSize}
  &.bttn-default
    color cWhite
  &.bttn-primary
    color cBlue
  &.bttn-warning
    color cYellow
  &.bttn-danger
    color cRedLight
  &.bttn-success
    color cGreen
  &.bttn-royal
    color cPurple

.bttn-jelly
  {bttnBaseStyle}
  {bttnMdSize}
  background cWhite
  border-radius 50px;
  color cBlue
  overflow hidden
  transition all 0.3s anim_func
  &:before
    position: absolute;
    content: '';
    width: 100%;
    height: 100%;
    background: currentColor;
    left: 0;
    top: 0;
    opacity: 0;
    z-index -1
    border-radius 50px;
    transform scale(0.2)
    transition all 0.3s anim_func
  &:hover, &:focus
    outline none
    box-shadow 0 1px 8px cBlack - rgba(0, 0, 0, .6)
    transition all 0.5s anim_func
    transform scale(1.1)
    &:before
      transform scale(1)
      transition all 0.5s anim_func
      opacity: 0.15
  &.bttn-xs
    {bttnXsSize}
    &:hover, &:focus
      box-shadow 0 1px 4px cBlack - rgba(0, 0, 0, .6)
  &.bttn-sm
    {bttnSmSize}
    &:hover, &:focus
      box-shadow 0 1px 6px cBlack - rgba(0, 0, 0, .6)
  &.bttn-md
    {bttnMdSize}
    &:hover, &:focus
      box-shadow 0 1px 8px cBlack - rgba(0, 0, 0, .6)
  &.bttn-lg
    {bttnLgSize}
    &:hover, &:focus
      box-shadow 0 1px 10px cBlack - rgba(0, 0, 0, .6)
  &.bttn-default
    background cWhite
    color cBlue
  &.bttn-primary
    background cBlue
    color cWhite
  &.bttn-warning
    background cYellow
    color cWhite
  &.bttn-danger
    background cRedLight
    color cWhite
  &.bttn-success
    background cGreen
    color cWhite
  &.bttn-royal
    background cPurple
    color cWhite

.bttn-fill
  {bttnBaseStyle}
  {bttnMdSize}
  background cWhite
  color cBlue
  border none
  z-index: 0;
  overflow hidden
  transition all 0.3s anim_func
  &:before
    position: absolute;
    content: '';
    width: 0;
    height: 100%;
    background: cBlue;
    left: 50%;
    bottom: 0;
    opacity: 0;
    z-index -1
    transition left 0.15s ease-out, opacity 0.15s ease-out, width 0.15s ease-out
  &:hover, &:focus
    color cWhite
    outline none
    box-shadow 0 1px 8px cBlack - rgba(0, 0, 0, .2)
    transition all 0.5s anim_func
    &:before
      left: 0;
      opacity: 1
      width 100%
      transition left 0.2s ease-in, opacity 0.2s ease-in, width 0.2s ease-in
  &.bttn-xs
    {bttnXsSize}
    &:hover, &:focus
      box-shadow 0 1px 4px cBlack - rgba(0, 0, 0, .2)
  &.bttn-sm
    {bttnSmSize}
    &:hover, &:focus
      box-shadow 0 1px 6px cBlack - rgba(0, 0, 0, .2)
  &.bttn-md
    {bttnMdSize}
    &:hover, &:focus
      box-shadow 0 1px 8px cBlack - rgba(0, 0, 0, .2)
  &.bttn-lg
    {bttnLgSize}
    &:hover, &:focus
      box-shadow 0 1px 10px cBlack - rgba(0, 0, 0, .2)
  &.bttn-default
    background cWhite
    color cBlue
    &:before
      background: cBlue;
  &.bttn-primary
    background cBlue
    color cWhite
    &:hover, &:focus
      color cBlue
    &:before
      background: cWhite;
  &.bttn-warning
    background cYellow
    color cWhite
    &:hover, &:focus
      color cYellow
    &:before
      background: cWhite;
  &.bttn-danger
    background cRedLight
    color cWhite
    &:hover, &:focus
      color cRedLight
    &:before
      background: cWhite;
  &.bttn-success
    background cGreen
    color cWhite
    &:hover, &:focus
      color cGreen
    &:before
      background: cWhite;
  &.bttn-royal
    background cPurple
    color cWhite
    &:hover, &:focus
      color cPurple
    &:before
      background: cWhite;

