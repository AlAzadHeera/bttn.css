.bttn-stretch
  {bttnBaseStyle}
  {bttnMdSize}
  border-width: 0
  border-radius 0;
  background transparent
  color: cWhite
  letter-spacing: 0;
  overflow hidden
  transition all 0.2s anim_func
  &:after, &:before
    content: '';
    position: absolute;
    left: 0;
    width: 100%;
    height: 1px;
    opacity 0.65
    transform scaleX(0)
    background: currentColor;
    transition all 0.2s anim_func
  &:after
    top: 0;
  &:before
    bottom: 0;
  &:hover, &:focus
    letter-spacing: 2px;
    opacity 0.9
    transition all 0.3s anim_func
    &:after
      opacity 1
      transform scaleX(1)
      transition all 0.3s anim_func
    &:before
      opacity 1
      transform scaleX(1)
      transition all 0.3s anim_func
  &.bttn-xs
    {bttnXsSize}
  &.bttn-sm
    {bttnSmSize}
  &.bttn-md
    {bttnMdSize}
  &.bttn-lg
    {bttnLgSize}
  &.bttn-default
    color cWhite
  &.bttn-primary
    color cBlue
  &.bttn-warning
    color cYellow
  &.bttn-danger
    color cRedLight
  &.bttn-success
    color cGreen
  &.bttn-royal
    color cPurple