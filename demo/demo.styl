@import "../config/config.styl"

body
  border 0
  padding 0
  margin 0
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  overflow-x: hidden !important;
  color cWhite
  background: cDarkBlue;
  font-family: 'Quicksand', sans-serif;
  a
    text-decoration: none;
    color: currentColor;

.bttn-logo-box
  background: cGreen; /* Old browsers */
  background: -moz-linear-gradient(top,  cGreen 0%, cGreen - rgba(0, 0, 0, .4) 100%); /* FF3.6-15 */
  background: -webkit-linear-gradient(top,  cGreen 0%,cGreen - rgba(0, 0, 0, .4) 100%); /* Chrome10-25,Safari5.1-6 */
  background: linear-gradient(to bottom,  cGreen 0%,cGreen - rgba(0, 0, 0, .4) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
  position: fixed;
  height: 360px;
  width: calc(100% + 20px);
  left: 0;
  top: 0;
  z-index: -3;
  .bttn-jelly
    font-size 60px
    padding: 4px 30px;
    border-radius: 40px;
    margin: 50px 10px 0 0;
    font-weight fontBold
  h4
    font-weight fontBold
    margin-bottom 45px
  .download-options
    .download-bttn
      button
        margin 0 10px
        font-weight fontBold
  .author
    margin-bottom 50px
    padding-top: 20px;
    button
      padding 4px

.fancy-box-wrapper
  margin-top: 360px;
  padding-top: 1px;
  position relative
  &:before
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: cDarkBlue;
    z-index: -2;

.fancy-box
  margin: 20px;
  .bttn-size
    transition all 0.3s anim_func
    color: currentColor;
    font-size: 80%;
    margin: 0 0 10px 0
    font-family: 'courier';
    opacity: 0.7;
    font-weight: fontBold;
  .fancy-box-buttons
    padding: 0;
    > .item
      position relative
      padding: 20px 0;
      &:before
        transition all 0.3s anim_func
        position: absolute;
        content: '';
        width: 100%;
        height: 100%;
        background: currentColor;
        left: 0;
        top: 0;
        opacity: 0.1;
        z-index -1
      &:nth-child(1)
        &:before
          opacity: 0.15;
      &:nth-child(2)
        &:before
          opacity: 0.2;
      &:nth-child(3)
        &:before
          opacity: 0.25;
      &:nth-child(4)
        &:before
          opacity: 0.3;
  .fancy-box-title
    text-align left
    padding: 20px 40px;
    position: relative;
    margin: 0 15px;
    &:before
      position: absolute;
      content: '';
      width: 100%;
      height: 100%;
      transition all 0.3s anim_func
      background: currentColor;
      left: 0;
      top: 0;
      opacity: 0.1;
      z-index -1
  .colors
    float right
    .color
      transition all 0.3s anim_func
      cursor pointer
      width 20px
      height 20px
      float left
      margin 5px 10px
      border-radius: 50%;
      transform: scale(0.8);
      &:last-child
        margin-right 0
      &:not(.active)
        &:hover
          transform: scale(0.9);
      &.active
        transform scale(1)
        border-radius 50% 2px 50% 50%


@media screen and (max-width: 767px)
  .fancy-box
    .colors
      float none
      margin-top 10px
      display flex
      justify-content: center;
